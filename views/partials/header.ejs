<div class="header">
        <div class="header-left">
            <img class="logo" src="https://prog-8.com/images/html/advanced/main_logo.png">
        </div>
    
        <div class="header-right">
            <a href="#" onclick="document.getElementById('id02').style.display='block'; document.getElementById('id01').style.display='none'">Sign Up</a>
            <a href="#" onclick="document.getElementById('id01').style.display='block'; document.getElementById('id02').style.display='none'">Login</a>
          </div>
        </div>

        <!-- login form -->
        <%- include('../partials/login'); %> 

        <!-- sign up form -->
        <%- include('../partials/signup'); %> 

    <script>
        // Get the login window
        var login = document.getElementById('id01');
        var signup = document.getElementById("id02");
        
        // When the user clicks anywhere outside of the login or sign up, close it
        window.onclick = function(event) {
            if (event.target == login || event.target == signup) {
                login.style.display = "none";
                signup.style.display = "none";
            }
        }

    </script>
    

</div>
